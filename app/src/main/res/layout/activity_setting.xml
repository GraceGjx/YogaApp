<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jiaxuan2.yoga.MainFunctions.SettingActivity">

    <EditText
        android:id="@+id/newNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="144dp" />

    <EditText
        android:id="@+id/newPasswordEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/nameSaveButton"
        android:layout_alignEnd="@+id/passwordSaveButton" />

    <Button
        android:id="@+id/nameSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/newNameEditText"
        android:layout_below="@+id/newNameEditText"
        android:layout_marginTop="18dp"
        android:text="SAVE" />

    <Button
        android:id="@+id/passwordSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nameSaveButton"
        android:layout_below="@+id/newPasswordEditText"
        android:layout_marginTop="30dp"
        android:text="SAVE" />

</RelativeLayout>
